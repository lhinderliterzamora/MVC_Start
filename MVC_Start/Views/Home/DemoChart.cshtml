@@{
    Layout = null;
}
<html>

<head>

    <style>

        body {
            background-image: radial-gradient( circle farthest-corner at 78% 59.3%, rgba(255,104,104,1) 0%, rgba(230,127,41,1) 90% );
        }

        .topnav {
            overflow: hidden;
            background-color: #333;
        }

            .topnav a {
                float: left;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }
    </style>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawVisualization);

        function drawVisualization() {
            // Some raw data (not necessarily accurate)
            var data = google.visualization.arrayToDataTable([
                ['Month', 'Mexican Food', 'Indian Food', 'Japanese Food', 'Beer', 'Average'],
                ['2000-05', 165, 938, 522, 998, 614.6],
                ['2006-10', 135, 1120, 599, 1268, 682],
                ['2011-15', 157, 1167, 587, 807, 623],
                ['2016-18', 139, 1110, 615, 968, 609.4],
                ['2019-20', 136, 691, 629, 1026, 569.6]
            ]);

            var options = {
                title: '',
                vAxis: { title: 'People(in thousand)' },
                hAxis: { title: 'Years' },
                seriesType: 'bars',
                series: { 5: { type: 'line' } }
            };

            var chart = new google.visualization.ComboChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        }
    </script>

</head>
<body>



    <div class="w3-container w3-teal">
        <h1>Charts</h1>
        <p>Point Line Chart: Consumption rate</p>
    </div>

    <div id="chart_div" style="width: 900px; height: 500px;"></div>





</body>
</html>